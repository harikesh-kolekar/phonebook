



<%= form_for @use do |f| %>

  <%= f.lable :first_name ,"First Name" %>
  <%= f.text_field :first_name  %>
<input type="text" name="birthdate" value="" />

<% end %>

<script type="text/javascript">
$(function() {
    $('input[name="birthdate"]').daterangepicker({
        singleDatePicker: true,
        showDropdowns: true,
        locale: {
            format: 'DD/MM/YYYY'
        }
    });
});
</script>