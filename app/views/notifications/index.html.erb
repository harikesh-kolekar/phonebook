<style type="text/css">
  .glyphicon {
    font-size: 20px;
  }

  .glyphicon1 {
    font-size: 20px;
  }
</style>
<div class="col-md-offset-5 col-md-5">
    <h1 >Notifications</h1>
</div>
<br/>
<%= link_to "Add Notification",new_notification_path,  :class=>"btn btn-info", :remote => true %>

<div class="container">
     <table cellpadding="0" cellspacing="0" border="0" class="display table"  id="example">
        <thead>
            <tr>
                <th>Title</th>
                <th>description</th>
                <th>Type</th>
                <th>attachment</th>
                <th>Edit</th>
                <th>Delete</th>                
            </tr>
        </thead>

        <tbody>
        <% @notifications.each do |notification| %>
           <tr>
             <td><%= notification.title %></td>
             <td><%= notification.description %></td>
             <td><%= notification.notification_type %></td>
             <td><a href="<%= notification.attachment.url %>"><%= notification.attachment.original_filename %></a></td>
             <td class="glyphicon1"><%= link_to "<i class=\"fa fa-pencil\"></i>".html_safe, edit_notification_path(notification, :format => "js"), :remote => true %></td>
             <td class="glyphicon"><%= link_to "<i class=\"fa fa-trash-o\"></i>".html_safe, notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
     </tbody>
  </table>
</div>

  


